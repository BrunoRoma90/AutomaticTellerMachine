@page
@model FinalProjectAtm.Razor.Pages.Transactions.WithdrawalModel
@{
    ViewData["Title"] = "Withdrawal";
}

<div>
    <h2>Withdrawal</h2>

    <form id="screenForm" method="post">
        <div>
            <label for="amount">Amount:</label>
            <input type="text" id="amount" name="amount" step="0.01" required />
        </div>

    </form>


    @if (TempData["ErrorMessage"] != null)
    {
        <p style="color: red;">@TempData["ErrorMessage"]</p>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <p style="color: green;">@TempData["SuccessMessage"]</p>
    }

</div>
